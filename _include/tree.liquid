{% for node in include.nodes %}
    {% assign node_type = node | split: ":" | first %}
    {% if node_type == "file" %}
        {% assign node_parts = node | split: "|" %}
        <li>→ <a href="{{ node_parts[1] }}">{{ node_parts[0] | split: ':' | last }}</a></li>
    {% else %}
        {% assign node_parts = node | split: ":" %}
        <li>
            <span class="toggle">📁 {{ node_parts[0] }}</span>
            <ul>
                {% assign children = node_parts[1] | split: "|" %}
                {% include tree.liquid nodes=children %}
            </ul>
        </li>
    {% endif %}
{% endfor %}
